<script>
    // Initialize Voice Widget State
    document.addEventListener("DOMContentLoaded", () => {
        let enabled = localStorage.getItem("aarohi_voice_enabled");
        if (enabled === null) enabled = "true";
        window.voiceToggle(enabled === "true");
        document.getElementById("voiceState").innerText = enabled === "true" ? "On" : "Off";

        let lang = localStorage.getItem("aarohi_lang") || window.SERVER_USER_LANG;
        document.getElementById("voiceLang").value = lang;
        if(window.voiceSetLang) window.voiceSetLang(lang);

                // Populate voice select once voices are available
                if (window.getAvailableVoices) {
                    window.getAvailableVoices().then(voices => {
                        const sel = document.getElementById('voiceSelect');
                        if (!sel) return;
                        sel.innerHTML = '';
                        voices.forEach(v => {
                            const opt = document.createElement('option');
                            opt.value = v.voiceURI || v.name;
                            opt.innerText = `${v.name} (${v.lang})`;
                            sel.appendChild(opt);
                        });

                        // select previously chosen voice
                        const pref = window.getPreferredVoice && window.getPreferredVoice();
                        if (pref) {
                            const match = Array.from(sel.options).find(o => o.value === pref || o.text.includes(pref));
                            if (match) sel.value = match.value;
                        }
                    }).catch(err => console.error('[voice] list error', err));
                }
    });

    function toggleVoice() {
        let newState = !window.AAROHIVoice.enabled;
        window.voiceToggle(newState);
        localStorage.setItem("aarohi_voice_enabled", newState);
        document.getElementById("voiceState").innerText = newState ? "On" : "Off";
        
        // Speak feedback in current lang
        const feedback = {
            en: newState ? "Voice Enabled" : "Voice Disabled",
            hi: newState ? "आवाज़ चालू है" : "आवाज़ बंद है",
            kn: newState ? "ಧ್ವನಿ ಸಕ್ರಿಯವಾಗಿದೆ" : "ಧ್ವನಿ ನಿಷ್ಕ್ರಿಯವಾಗಿದೆ"
        };
        const currentLang = document.getElementById("voiceLang").value;
        if(newState) voiceSpeak(feedback[currentLang] || feedback['en']);
    }

        // Voice select handlers
        document.addEventListener('DOMContentLoaded', () => {
            const saveBtn = document.getElementById('saveVoiceBtn');
            const testBtn = document.getElementById('testVoiceBtn');
            const sel = document.getElementById('voiceSelect');
            if (!sel || !saveBtn || !testBtn) return;

            saveBtn.addEventListener('click', () => {
                const val = sel.value;
                if (window.setPreferredVoice) window.setPreferredVoice(val);
                alert('Preferred voice saved');
            });

            testBtn.addEventListener('click', () => {
                const val = sel.value;
                const label = sel.options[sel.selectedIndex].text;
                // Try to use selected voice immediately for a test phrase in current language
                window.setPreferredVoice && window.setPreferredVoice(val);
                const lang = document.getElementById('voiceLang').value || 'en';
                const sample = {
                    en: 'Hello, this is a test voice.',
                    hi: 'नमस्ते, यह परीक्षण आवाज़ है।',
                    kn: 'ನಮಸ್ಕಾರ, ಇದು ಟೆಸ್ಟ್ ಧ್ವನಿ.'
                }[lang] || 'Test voice';
                voiceSpeak(sample);
            });
        });
</script>