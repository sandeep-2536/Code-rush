                    <% } %>
                    <span class="text-white font-medium"><%= user.name %></span>
                </a>
                <% } else { %>
                <a href="/auth/login" class="bg-white text-green-600 hover:bg-green-50 px-6 py-2 rounded-lg font-semibold transition" data-i18n="nav.login">
                    Login
                </a>
                <% } %>
            </nav>
        </div>
    </div>
</header>

<script>
    // 1. Function to Change Language
    function changeLanguage(lang) {
        // Save preference
        localStorage.setItem('aarohi_lang', lang);
        
        // Update Voice Setting if widget exists
        if(window.voiceSetLang) {
            window.voiceSetLang(lang);
        }

        // Trigger translation load (Defined in your main layout or home.ejs)
        if (typeof loadTranslations === 'function') {
            loadTranslations(lang);
        } else {
            // Fallback if function isn't ready: reload page
            window.location.reload(); 
        }
    }

    // 2. Initialize Language on Page Load
    document.addEventListener('DOMContentLoaded', () => {
        const savedLang = localStorage.getItem('aarohi_lang') || 'en';
        if (typeof loadTranslations === 'function') {
            loadTranslations(savedLang);
        }
    });
</script>