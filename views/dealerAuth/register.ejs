<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dealer Registration - AgriMarket</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-br from-indigo-50 via-purple-50 to-pink-50">
  
  <div class="min-h-screen flex items-center justify-center px-4 py-8">
    <div class="max-w-2xl w-full backdrop-blur-xl bg-white/90 rounded-3xl shadow-2xl border-2 border-white/50 p-8">
      
      <!-- Header Section -->
      <div class="text-center mb-8">
        <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-purple-500 via-pink-500 to-red-500 rounded-3xl mb-4 shadow-xl">
          <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z"/>
          </svg>
        </div>
        <h2 class="text-4xl font-bold bg-gradient-to-r from-purple-600 via-pink-600 to-red-600 bg-clip-text text-transparent mb-2">
          Dealer Registration
        </h2>
        <p class="text-gray-600 text-lg">Join the agricultural marketplace</p>
      </div>

      <!-- Registration Form -->
      <form action="/dealer-auth/register" method="POST" class="space-y-5">
        
        <!-- Personal Information Section -->
        <div class="bg-gradient-to-r from-purple-50 to-pink-50 rounded-2xl p-6 border-2 border-purple-100">
          <h3 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <svg class="w-6 h-6 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
            </svg>
            Personal Information
          </h3>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <!-- Name -->
            <div>
              <label for="name" class="block text-sm font-bold text-gray-700 mb-2">
                Full Name *
              </label>
              <input 
                type="text" 
                id="name"
                name="name" 
                placeholder="Your full name"
                required
                class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:ring-4 focus:ring-purple-200 focus:border-purple-500 outline-none transition text-base font-semibold"
              />
            </div>

            <!-- Shop Name -->
            <div>
              <label for="shopName" class="block text-sm font-bold text-gray-700 mb-2">
                Shop Name
              </label>
              <input 
                type="text" 
                id="shopName"
                name="shopName" 
                placeholder="Your shop name (optional)"
                class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:ring-4 focus:ring-purple-200 focus:border-purple-500 outline-none transition text-base font-semibold"
              />
            </div>
          </div>

          <div class="mt-4">
            <!-- Phone -->
            <label for="phone" class="block text-sm font-bold text-gray-700 mb-2 flex items-center gap-2">
              <svg class="w-5 h-5 text-purple-500" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
              </svg>
              Phone Number *
            </label>
            <input 
              type="tel" 
              id="phone"
              name="phone" 
              placeholder="10 digit mobile number"
              pattern="[0-9]{10}"
              required
              class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:ring-4 focus:ring-purple-200 focus:border-purple-500 outline-none transition text-base font-semibold"
            />
          </div>
        </div>

        <!-- Location Section -->
        <div class="bg-gradient-to-r from-blue-50 to-cyan-50 rounded-2xl p-6 border-2 border-blue-100">
          <h3 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
            </svg>
            Location Details
          </h3>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <!-- Village -->
            <div>
              <label for="village" class="block text-sm font-bold text-gray-700 mb-2">
                Village
              </label>
              <input 
                type="text" 
                id="village"
                name="village" 
                placeholder="Village name"
                class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:ring-4 focus:ring-blue-200 focus:border-blue-500 outline-none transition text-base font-semibold"
              />
            </div>

            <!-- Taluk -->
            <div>
              <label for="taluk" class="block text-sm font-bold text-gray-700 mb-2">
                Taluk
              </label>
              <input 
                type="text" 
                id="taluk"
                name="taluk" 
                placeholder="Taluk name"
                class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:ring-4 focus:ring-blue-200 focus:border-blue-500 outline-none transition text-base font-semibold"
              />
            </div>

            <!-- District -->
            <div>
              <label for="district" class="block text-sm font-bold text-gray-700 mb-2">
                District
              </label>
              <input 
                type="text" 
                id="district"
                name="district" 
                placeholder="District name"
                class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:ring-4 focus:ring-blue-200 focus:border-blue-500 outline-none transition text-base font-semibold"
              />
            </div>
          </div>
        </div>

        <!-- Security Section -->
        <div class="bg-gradient-to-r from-green-50 to-emerald-50 rounded-2xl p-6 border-2 border-green-100">
          <h3 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
            </svg>
            Security
          </h3>
          
          <!-- Password -->
          <div>
            <label for="password" class="block text-sm font-bold text-gray-700 mb-2">
              Password *
            </label>
            <input 
              type="password" 
              id="password"
              name="password" 
              placeholder="Create a strong password"
              minlength="6"
              required
              class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:ring-4 focus:ring-green-200 focus:border-green-500 outline-none transition text-base font-semibold"
            />
            <p class="text-xs text-gray-500 mt-2">Minimum 6 characters required</p>
          </div>
        </div>

        <!-- Submit Button -->
        <button 
          type="submit"
          class="w-full bg-gradient-to-r from-purple-600 via-pink-600 to-red-600 hover:from-purple-700 hover:via-pink-700 hover:to-red-700 text-white font-bold py-5 px-6 rounded-2xl shadow-xl hover:shadow-2xl transform hover:scale-105 active:scale-95 transition-all duration-300 text-lg flex items-center justify-center gap-3"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
            <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z"/>
          </svg>
          Register as Dealer
        </button>
      </form>

      <!-- Login Link -->
      <div class="mt-8 text-center">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t-2 border-gray-200"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-4 bg-white/90 text-gray-600 font-semibold">Already have an account?</span>
          </div>
        </div>
        <a href="/dealer-auth/login" class="mt-4 inline-flex items-center gap-2 text-purple-600 hover:text-purple-700 font-bold text-lg">
          <span>Login here</span>
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
          </svg>
        </a>
      </div>

      <!-- Back to Home -->
      <div class="mt-6 text-center">
        <a href="/" class="text-gray-500 hover:text-gray-700 font-semibold flex items-center justify-center gap-2">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
          </svg>
          Back to Home
        </a>
      </div>

    </div>
  </div>

</body>
</html>