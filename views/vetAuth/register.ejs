<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Veterinarian Registration - TeleVet</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">
  
  <div class="min-h-screen bg-gradient-to-b from-green-50 to-green-100 flex items-center justify-center px-4 py-8">
    <div class="max-w-md w-full bg-white rounded-2xl shadow-xl p-8">
      <!-- Icon/Logo Area -->
      <div class="text-center mb-6">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-green-100 rounded-full mb-4">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
          </svg>
        </div>
        <h2 class="text-3xl font-bold text-gray-800">Veterinarian Registration</h2>
        <p class="text-gray-600 mt-2">Join our televet community</p>
      </div>

      <!-- Registration Form -->
      <form action="/vet-auth/register" method="POST" class="space-y-5">
        <!-- Name Field -->
        <div>
          <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">
            ğŸ‘¤ Full Name
          </label>
          <input 
            type="text" 
            id="name"
            name="name" 
            placeholder="Dr. Your Name"
            required
            class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 outline-none transition text-lg"
          />
        </div>

        <!-- Phone Field -->
        <div>
          <label for="phone" class="block text-sm font-semibold text-gray-700 mb-2">
            ğŸ“± Phone Number (Indian)
          </label>
          <input 
            type="tel" 
            id="phone"
            name="phone" 
            placeholder="+91 XXXXX XXXXX"
            pattern="[0-9]{10}"
            required
            class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 outline-none transition text-lg"
          />
          <p class="text-xs text-gray-500 mt-1">Enter 10 digit mobile number</p>
        </div>

        <!-- Specialization Field -->
        <div>
          <label for="specialization" class="block text-sm font-semibold text-gray-700 mb-2">
            ğŸ„ Specialization
          </label>
          <input 
            type="text" 
            id="specialization"
            name="specialization" 
            placeholder="e.g., Cows, Goats, Poultry"
            class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 outline-none transition text-lg"
          />
          <p class="text-xs text-gray-500 mt-1">Optional: Mention animal types you specialize in</p>
        </div>

        <!-- Password Field -->
        <div>
          <label for="password" class="block text-sm font-semibold text-gray-700 mb-2">
            ğŸ”’ Password
          </label>
          <input 
            type="password" 
            id="password"
            name="password" 
            placeholder="Create a strong password"
            minlength="6"
            required
            class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 outline-none transition text-lg"
          />
          <p class="text-xs text-gray-500 mt-1">Minimum 6 characters</p>
        </div>

        <!-- Submit Button -->
        <button 
          type="submit"
          class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-4 px-6 rounded-lg transition duration-200 transform hover:scale-105 shadow-lg text-lg mt-6"
        >
          Register as Veterinarian
        </button>
      </form>

      <!-- Login Link -->
      <div class="mt-6 text-center">
        <p class="text-gray-600">
          Already registered? 
          <a href="/vet-auth/login" class="text-green-600 hover:text-green-700 font-semibold">
            Login here
          </a>
        </p>
      </div>
    </div>
  </div>

</body>
</html>