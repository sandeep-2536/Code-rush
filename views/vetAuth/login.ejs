<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Veterinarian Login - TeleVet</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">
  
  <div class="min-h-screen bg-gradient-to-b from-green-50 to-green-100 flex items-center justify-center px-4 py-8">
    <div class="max-w-md w-full bg-white rounded-2xl shadow-xl p-8">
      <!-- Icon/Logo Area -->
      <div class="text-center mb-6">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-green-100 rounded-full mb-4">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        </div>
        <h2 class="text-3xl font-bold text-gray-800">Veterinarian Login</h2>
        <p class="text-gray-600 mt-2">Welcome back, Doctor</p>
      </div>

      <!-- Login Form -->
      <form action="/vet-auth/login" method="POST" class="space-y-6">
        <!-- Phone Field -->
        <div>
          <label for="phone" class="block text-sm font-semibold text-gray-700 mb-2">
            ðŸ“± Phone Number
          </label>
          <input 
            type="tel" 
            id="phone"
            name="phone" 
            placeholder="Enter your phone number"
            required
            class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 outline-none transition text-lg"
          />
        </div>

        <!-- Password Field -->
        <div>
          <label for="password" class="block text-sm font-semibold text-gray-700 mb-2">
            ðŸ”’ Password
          </label>
          <input 
            type="password" 
            id="password"
            name="password" 
            placeholder="Enter your password"
            required
            class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 outline-none transition text-lg"
          />
        </div>

        <!-- Submit Button -->
        <button 
          type="submit"
          class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-4 px-6 rounded-lg transition duration-200 transform hover:scale-105 shadow-lg text-lg"
        >
          Login to Dashboard
        </button>
      </form>

      <!-- Register Link -->
      <div class="mt-6 text-center">
        <p class="text-gray-600">
          New veterinarian? 
          <a href="/vet-auth/register" class="text-green-600 hover:text-green-700 font-semibold">
            Register here
          </a>
        </p>
      </div>
    </div>
  </div>

</body>
</html>