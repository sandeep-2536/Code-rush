<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Stock - <%= stock.title %>
    </title>
    <link rel="stylesheet" href="/css/output.css">
</head>

<body>
    <%- include('../layouts/header') %>

        <div class="min-h-screen bg-gradient-to-br from-orange-50 via-amber-50 to-yellow-50 py-8 px-4">
            <div class="max-w-4xl mx-auto">

                <!-- Header -->
                <div class="text-center mb-8">
                    <div
                        class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-orange-500 to-amber-600 rounded-3xl shadow-xl mb-4 transform hover:rotate-12 transition-all duration-300">
                        <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z" />
                            <path fill-rule="evenodd"
                                d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z"
                                clip-rule="evenodd" />
                        </svg>
                    </div>
                    <h1
                        class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-orange-600 to-amber-600 bg-clip-text text-transparent mb-3">
                        Edit Stock Details
                    </h1>
                    <p class="text-lg text-gray-600">Update your product information</p>
                </div>

                <!-- Form Card -->
                <form action="/stock/dealer/<%= stock._id %>/edit" method="POST" enctype="multipart/form-data"
                    class="backdrop-blur-xl bg-white/90 rounded-3xl shadow-2xl border-2 border-white/50 p-8 md:p-10">

                    <!-- Basic Information Section -->
                    <div class="mb-8">
                        <h3 class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-2">
                            <span
                                class="w-8 h-8 bg-orange-100 rounded-full flex items-center justify-center text-orange-600 font-bold text-sm">1</span>
                            Basic Information
                        </h3>

                        <div class="space-y-5">

                            <!-- Title -->
                            <div class="group">
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    Product Title <span class="text-red-500">*</span>
                                </label>
                                <div class="relative">
                                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                        <svg class="w-5 h-5 text-gray-400 group-focus-within:text-orange-500 transition-colors"
                                            fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd"
                                                d="M17.707 9.293a1 1 0 010 1.414l-7 7a1 1 0 01-1.414 0l-7-7A.997.997 0 012 10V5a3 3 0 013-3h5c.256 0 .512.098.707.293l7 7zM5 6a1 1 0 100-2 1 1 0 000 2z"
                                                clip-rule="evenodd" />
                                        </svg>
                                    </div>
                                    <input name="title" type="text" value="<%= stock.title %>" required
                                        class="w-full pl-12 pr-4 py-4 bg-white border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-orange-200 focus:border-orange-500 outline-none transition-all duration-300 text-gray-700">
                                </div>
                            </div>

                            <!-- Category & Brand Grid -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-5">

                                <!-- Category -->
                                <div class="relative group">
                                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                                        Category <span class="text-red-500">*</span>
                                    </label>
                                    <select name="category" required
                                        class="w-full px-4 py-4 bg-white border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-orange-200 focus:border-orange-500 outline-none transition-all duration-300 text-gray-700 appearance-none cursor-pointer">
                                        <option value="Seed" <%=stock.category==='Seed' ?'selected':''%>>üå± Seed
                                        </option>
                                        <option value="Fertilizer" <%=stock.category==='Fertilizer' ?'selected':''%>>üíß
                                            Fertilizer</option>
                                        <option value="Pesticide" <%=stock.category==='Pesticide' ?'selected':''%>>üõ°Ô∏è
                                            Pesticide</option>
                                        <option value="Tools" <%=stock.category==='Tools' ?'selected':''%>>üîß Tools
                                        </option>
                                    </select>
                                    <div
                                        class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none mt-8">
                                        <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd"
                                                d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                                                clip-rule="evenodd" />
                                        </svg>
                                    </div>
                                </div>

                                <!-- Brand -->
                                <div>
                                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                                        Brand
                                    </label>
                                    <div class="relative group">
                                        <div
                                            class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                            <svg class="w-5 h-5 text-gray-400 group-focus-within:text-orange-500 transition-colors"
                                                fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd"
                                                    d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                                    clip-rule="evenodd" />
                                            </svg>
                                        </div>
                                        <input name="brand" type="text" value="<%= stock.brand %>"
                                            placeholder="e.g., Bayer, Syngenta"
                                            class="w-full pl-12 pr-4 py-4 bg-white border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-orange-200 focus:border-orange-500 outline-none transition-all duration-300 text-gray-700 placeholder-gray-400">
                                    </div>
                                </div>

                            </div>

                            <!-- Variety -->
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    Variety / Specifications
                                </label>
                                <div class="relative group">
                                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                        <svg class="w-5 h-5 text-gray-400 group-focus-within:text-orange-500 transition-colors"
                                            fill="currentColor" viewBox="0 0 20 20">
                                            <path
                                                d="M7 3a1 1 0 000 2h6a1 1 0 100-2H7zM4 7a1 1 0 011-1h10a1 1 0 110 2H5a1 1 0 01-1-1zM2 11a2 2 0 012-2h12a2 2 0 012 2v4a2 2 0 01-2 2H4a2 2 0 01-2-2v-4z" />
                                        </svg>
                                    </div>
                                    <input name="variety" type="text" value="<%= stock.variety %>"
                                        placeholder="e.g., HD-2967, NPK 19:19:19"
                                        class="w-full pl-12 pr-4 py-4 bg-white border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-orange-200 focus:border-orange-500 outline-none transition-all duration-300 text-gray-700 placeholder-gray-400">
                                </div>
                            </div>

                        </div>
                    </div>

                    <!-- Pricing & Quantity Section -->
                    <div class="mb-8">
                        <h3 class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-2">
                            <span
                                class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center text-blue-600 font-bold text-sm">2</span>
                            Pricing & Quantity
                        </h3>

                        <div class="grid grid-cols-1 md:grid-cols-3 gap-5">

                            <!-- Quantity -->
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    Quantity Available <span class="text-red-500">*</span>
                                </label>
                                <div class="relative group">
                                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                        <svg class="w-5 h-5 text-gray-400 group-focus-within:text-blue-500 transition-colors"
                                            fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd"
                                                d="M10 2a4 4 0 00-4 4v1H5a1 1 0 00-.994.89l-1 9A1 1 0 004 18h12a1 1 0 00.994-1.11l-1-9A1 1 0 0015 7h-1V6a4 4 0 00-4-4zm2 5V6a2 2 0 10-4 0v1h4zm-6 3a1 1 0 112 0 1 1 0 01-2 0zm7-1a1 1 0 100 2 1 1 0 000-2z"
                                                clip-rule="evenodd" />
                                        </svg>
                                    </div>
                                    <input name="quantity" type="number" value="<%= stock.quantity %>" required min="0"
                                        class="w-full pl-12 pr-4 py-4 bg-white border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-blue-200 focus:border-blue-500 outline-none transition-all duration-300 text-gray-700">
                                </div>
                            </div>

                            <!-- Unit -->
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    Unit
                                </label>
                                <div class="relative group">
                                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                        <svg class="w-5 h-5 text-gray-400 group-focus-within:text-blue-500 transition-colors"
                                            fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
                                            <path fill-rule="evenodd"
                                                d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z"
                                                clip-rule="evenodd" />
                                        </svg>
                                    </div>
                                    <input name="quantityUnit" type="text" value="<%= stock.quantityUnit %>"
                                        placeholder="Kg, Ltr, Pcs"
                                        class="w-full pl-12 pr-4 py-4 bg-white border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-blue-200 focus:border-blue-500 outline-none transition-all duration-300 text-gray-700 placeholder-gray-400">
                                </div>
                            </div>

                            <!-- Price -->
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    Price (‚Çπ) <span class="text-red-500">*</span>
                                </label>
                                <div class="relative group">
                                    <span
                                        class="absolute inset-y-0 left-0 pl-4 flex items-center text-gray-500 font-semibold text-lg">‚Çπ</span>
                                    <input name="price" type="number" value="<%= stock.price %>" required min="0"
                                        class="w-full pl-10 pr-4 py-4 bg-white border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-blue-200 focus:border-blue-500 outline-none transition-all duration-300 text-gray-700 font-semibold">
                                </div>
                            </div>

                        </div>
                    </div>

                    <!-- Image Section -->
                    <div class="mb-8">
                        <h3 class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-2">
                            <span
                                class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center text-purple-600 font-bold text-sm">3</span>
                            Product Image
                        </h3>

                        <!-- Current Image Display -->
                        <% if (stock.image) { %>
                            <div class="mb-5">
                                <p class="text-sm font-semibold text-gray-700 mb-3 flex items-center gap-2">
                                    <svg class="w-5 h-5 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd"
                                            d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z"
                                            clip-rule="evenodd" />
                                    </svg>
                                    Current Image:
                                </p>
                                <div class="relative inline-block group">
                                    <img src="/uploads/<%= stock.image %>"
                                        class="w-full max-w-md rounded-2xl shadow-lg border-4 border-purple-200"
                                        alt="Current product image">
                                    <div
                                        class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-6">
                                        <p class="text-white font-semibold text-lg">Upload new image to replace</p>
                                    </div>
                                </div>
                            </div>
                            <% } %>

                                <!-- New Image Upload -->
                                <div>
                                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                                        Upload New Image (optional)
                                    </label>
                                    <div
                                        class="relative border-2 border-dashed border-purple-300 rounded-xl p-8 text-center hover:border-purple-500 hover:bg-purple-50/50 transition-all duration-300 bg-white group cursor-pointer">
                                        <input type="file" name="image" accept="image/*"
                                            class="absolute inset-0 w-full h-full opacity-0 cursor-pointer z-10"
                                            onchange="previewNewImage(event)">
                                        <div id="uploadPlaceholder">
                                            <svg class="w-16 h-16 mx-auto text-purple-400 group-hover:text-purple-600 transition-colors mb-3"
                                                fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd"
                                                    d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z"
                                                    clip-rule="evenodd" />
                                            </svg>
                                            <p class="text-gray-600 font-medium mb-1">Click to upload new image</p>
                                            <p class="text-sm text-gray-400">PNG, JPG up to 5MB</p>
                                        </div>
                                        <div id="newImagePreview" class="hidden">
                                            <img id="newPreview" class="max-h-48 mx-auto rounded-lg shadow-lg">
                                            <p class="text-sm text-purple-600 font-semibold mt-3">‚úì New image selected -
                                                Click to change</p>
                                        </div>
                                    </div>
                                </div>
                    </div>

                    <!-- Location Section -->
                    <div class="mb-8">
                        <h3 class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-2">
                            <span
                                class="w-8 h-8 bg-red-100 rounded-full flex items-center justify-center text-red-600 font-bold text-sm">4</span>
                            Location Details
                        </h3>

                        <div class="grid grid-cols-1 md:grid-cols-3 gap-5">

                            <!-- Village -->
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    Village / City
                                </label>
                                <div class="relative group">
                                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                        <svg class="w-5 h-5 text-gray-400 group-focus-within:text-red-500 transition-colors"
                                            fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd"
                                                d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                                                clip-rule="evenodd" />
                                        </svg>
                                    </div>
                                    <input name="village" type="text" value="<%= stock.location.village %>"
                                        class="w-full pl-12 pr-4 py-4 bg-white border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-red-200 focus:border-red-500 outline-none transition-all duration-300 text-gray-700">
                                </div>
                            </div>

                            <!-- Taluk -->
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    Taluk
                                </label>
                                <div class="relative group">
                                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                        <svg class="w-5 h-5 text-gray-400 group-focus-within:text-red-500 transition-colors"
                                            fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd"
                                                d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                                                clip-rule="evenodd" />
                                        </svg>
                                    </div>
                                    <input name="taluk" type="text" value="<%= stock.location.taluk %>"
                                        class="w-full pl-12 pr-4 py-4 bg-white border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-red-200 focus:border-red-500 outline-none transition-all duration-300 text-gray-700">
                                </div>
                            </div>

                            <!-- District -->
                            <div>
                                <label class="block text-sm font-semibold text-gray-700 mb-2">
                                    District
                                </label>
                                <div class="relative group">
                                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                        <svg class="w-5 h-5 text-gray-400 group-focus-within:text-red-500 transition-colors"
                                            fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd"
                                                d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                                                clip-rule="evenodd" />
                                        </svg>
                                    </div>
                                    <input name="district" type="text" value="<%= stock.location.district %>"
                                        class="w-full pl-12 pr-4 py-4 bg-white border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-red-200 focus:border-red-500 outline-none transition-all duration-300 text-gray-700">
                                </div>
                            </div>

                        </div>
                    </div>

                    <!-- Submit Buttons -->
                    <div class="flex flex-col sm:flex-row gap-4">
                        <button type="submit"
                            class="flex-1 bg-gradient-to-r from-orange-600 to-amber-600 hover:from-orange-700 hover:to-amber-700 text-white py-5 rounded-2xl font-bold text-lg shadow-xl hover:shadow-2xl transform hover:scale-[1.02] active:scale-95 transition-all duration-300 flex items-center justify-center gap-3">
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                                <path
                                    d="M7.707 10.293a1 1 0 10-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 11.586V6h5a2 2 0 012 2v7a2 2 0 01-2 2H4a2 2 0 01-2-2V8a2 2 0 012-2h5v5.586l-1.293-1.293zM9 4a1 1 0 012 0v2H9V4z" />
                            </svg>
                            <span>Update Stock</span>
                        </button>

                        <a href="/stock/<%= stock._id %>"
                            class="sm:w-auto px-8 py-5 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-2xl font-semibold transition-all duration-300 flex items-center justify-center gap-2">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd"
                                    d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                                    clip-rule="evenodd" />
                            </svg>
                            Cancel
                        </a>
                    </div>

                </form>

                <!-- Back Link -->
                <div class="mt-8 text-center">
                    <a href="/stock/<%= stock._id %>"
                        class="inline-flex items-center gap-2 text-gray-600 hover:text-orange-600 transition-colors font-semibold">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z"
                                clip-rule="evenodd" />
                        </svg>
                        <span>Back to Product Details</span>
                    </a>
                </div>

            </div>
        </div>

        <!-- Image Preview Script -->
        <script>
            function previewNewImage(event) {
                const file = event.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        document.getElementById('newPreview').src = e.target.result;
                        document.getElementById('uploadPlaceholder').classList.add('hidden');
                        document.getElementById('newImagePreview').classList.remove('hidden');
                    };
                    reader.readAsDataURL(file);
                }
            }
        </script>

        <%- include('../layouts/footer') %>
</body>

</html>