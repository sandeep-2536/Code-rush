<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Stock - Aarohi</title>
    <link rel="stylesheet" href="/css/output.css">
</head>
<body>
    <%- include('../layouts/header') %>

    <div class="min-h-screen bg-gradient-to-br from-green-50 via-emerald-50 to-teal-50 py-8 px-4">
        <div class="max-w-4xl mx-auto">

            <!-- Header -->
        <div class="text-center mb-8">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-green-500 to-emerald-600 rounded-3xl shadow-xl mb-4">
                <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 3.5a1.5 1.5 0 013 0V4a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-.5a1.5 1.5 0 000 3h.5a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-.5a1.5 1.5 0 00-3 0v.5a1 1 0 01-1 1H6a1 1 0 01-1-1v-3a1 1 0 00-1-1h-.5a1.5 1.5 0 010-3H4a1 1 0 001-1V6a1 1 0 011-1h3a1 1 0 001-1v-.5z"/>
                </svg>
            </div>
            <h1 class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-green-600 to-emerald-600 bg-clip-text text-transparent mb-3">
                Add New Stock
            </h1>
            <p class="text-lg text-gray-600">List your agricultural products for farmers</p>
        </div>

        <!-- Form Card -->
        <form action="/stock/dealer/new" method="POST" enctype="multipart/form-data" 
              class="backdrop-blur-xl bg-white/90 rounded-3xl shadow-2xl border-2 border-white/50 p-8 md:p-10">

            <!-- Basic Information Section -->
            <div class="mb-8">
                <h3 class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-2">
                    <span class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center text-green-600 font-bold text-sm">1</span>
                    Basic Information
                </h3>

                <div class="space-y-5">
                    
                    <!-- Title -->
                    <div class="group">
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            Product Title *
                        </label>
                        <input name="title" 
                               type="text"
                               required
                               placeholder="e.g., Organic Wheat Seeds"
                               class="w-full px-4 py-4 bg-white border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-green-200 focus:border-green-500 outline-none transition-all duration-300 text-gray-700 placeholder-gray-400">
                    </div>

                    <!-- Category & Brand Grid -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                        
                        <!-- Category -->
                        <div class="relative group">
                            <label class="block text-sm font-semibold text-gray-700 mb-2">
                                Category *
                            </label>
                            <select name="category" 
                                    required
                                    class="w-full px-4 py-4 bg-white border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-green-200 focus:border-green-500 outline-none transition-all duration-300 text-gray-700 appearance-none cursor-pointer">
                                <option value="">Select Category</option>
                                <option value="Seed">üå± Seed</option>
                                <option value="Fertilizer">üíß Fertilizer</option>
                                <option value="Pesticide">üõ°Ô∏è Pesticide</option>
                                <option value="Tools">üîß Tools</option>
                            </select>
                            <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none mt-8">
                                <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
                                </svg>
                            </div>
                        </div>

                        <!-- Brand -->
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">
                                Brand
                            </label>
                            <input name="brand" 
                                   type="text"
                                   placeholder="e.g., Bayer, Syngenta"
                                   class="w-full px-4 py-4 bg-white border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-green-200 focus:border-green-500 outline-none transition-all duration-300 text-gray-700 placeholder-gray-400">
                        </div>

                    </div>

                    <!-- Variety -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            Variety / Specifications
                        </label>
                        <input name="variety" 
                               type="text"
                               placeholder="e.g., HD-2967, NPK 19:19:19"
                               class="w-full px-4 py-4 bg-white border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-green-200 focus:border-green-500 outline-none transition-all duration-300 text-gray-700 placeholder-gray-400">
                    </div>

                </div>
            </div>

            <!-- Pricing & Quantity Section -->
            <div class="mb-8">
                <h3 class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-2">
                    <span class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center text-blue-600 font-bold text-sm">2</span>
                    Pricing & Quantity
                </h3>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-5">
                    
                    <!-- Quantity -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            Quantity Available *
                        </label>
                        <input name="quantity" 
                               type="number" 
                               required
                               min="0"
                               placeholder="100"
                               class="w-full px-4 py-4 bg-white border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-blue-200 focus:border-blue-500 outline-none transition-all duration-300 text-gray-700 placeholder-gray-400">
                    </div>

                    <!-- Unit -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            Unit
                        </label>
                        <input name="quantityUnit" 
                               type="text"
                               value="Kg"
                               placeholder="Kg, Ltr, Pcs"
                               class="w-full px-4 py-4 bg-white border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-blue-200 focus:border-blue-500 outline-none transition-all duration-300 text-gray-700 placeholder-gray-400">
                    </div>

                    <!-- Price -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            Price (‚Çπ) *
                        </label>
                        <div class="relative">
                            <span class="absolute inset-y-0 left-0 pl-4 flex items-center text-gray-500 font-semibold">‚Çπ</span>
                            <input name="price" 
                                   type="number" 
                                   required
                                   min="0"
                                   placeholder="500"
                                   class="w-full pl-8 pr-4 py-4 bg-white border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-blue-200 focus:border-blue-500 outline-none transition-all duration-300 text-gray-700 placeholder-gray-400">
                        </div>
                    </div>

                </div>
            </div>

            <!-- Shop Information Section -->
            <div class="mb-8">
                <h3 class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-2">
                    <span class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center text-purple-600 font-bold text-sm">3</span>
                    Shop Information
                </h3>

                <div class="space-y-5">
                    
                    <!-- Shop Name -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            Shop Name
                        </label>
                        <input name="shopName" 
                               type="text"
                               placeholder="e.g., Green Valley Agro Store"
                               class="w-full px-4 py-4 bg-white border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-purple-200 focus:border-purple-500 outline-none transition-all duration-300 text-gray-700 placeholder-gray-400">
                    </div>

                    <!-- Image Upload -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            Product Image
                        </label>
                        <div class="relative border-2 border-dashed border-gray-300 rounded-xl p-8 text-center hover:border-purple-400 transition-all duration-300 bg-gray-50 hover:bg-purple-50 group cursor-pointer">
                            <input type="file" 
                                   name="image" 
                                   accept="image/*"
                                   class="absolute inset-0 w-full h-full opacity-0 cursor-pointer"
                                   onchange="previewImage(event)">
                            <div id="uploadPlaceholder">
                                <svg class="w-16 h-16 mx-auto text-gray-400 group-hover:text-purple-500 transition-colors mb-3" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"/>
                                </svg>
                                <p class="text-gray-600 font-medium mb-1">Click to upload product image</p>
                                <p class="text-sm text-gray-400">PNG, JPG up to 5MB</p>
                            </div>
                            <div id="imagePreview" class="hidden">
                                <img id="preview" class="max-h-48 mx-auto rounded-lg shadow-lg">
                                <p class="text-sm text-gray-600 mt-3">Click to change image</p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- Location Section -->
            <div class="mb-8">
                <h3 class="text-2xl font-bold text-gray-800 mb-6 flex items-center gap-2">
                    <span class="w-8 h-8 bg-red-100 rounded-full flex items-center justify-center text-red-600 font-bold text-sm">4</span>
                    Location Details
                </h3>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-5">
                    
                    <!-- Village -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            Village / City
                        </label>
                        <input name="village" 
                               type="text"
                               placeholder="Village name"
                               class="w-full px-4 py-4 bg-white border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-red-200 focus:border-red-500 outline-none transition-all duration-300 text-gray-700 placeholder-gray-400">
                    </div>

                    <!-- Taluk -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            Taluk
                        </label>
                        <input name="taluk" 
                               type="text"
                               placeholder="Taluk name"
                               class="w-full px-4 py-4 bg-white border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-red-200 focus:border-red-500 outline-none transition-all duration-300 text-gray-700 placeholder-gray-400">
                    </div>

                    <!-- District -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            District
                        </label>
                        <input name="district" 
                               type="text"
                               placeholder="District name"
                               class="w-full px-4 py-4 bg-white border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-red-200 focus:border-red-500 outline-none transition-all duration-300 text-gray-700 placeholder-gray-400">
                    </div>

                </div>
            </div>

            <!-- Submit Button -->
            <div class="flex gap-4">
                <button type="submit" 
                        class="flex-1 bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 text-white py-5 rounded-2xl font-bold text-lg shadow-xl hover:shadow-2xl transform hover:scale-[1.02] active:scale-95 transition-all duration-300 flex items-center justify-center gap-3">
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd"/>
                    </svg>
                    <span>Add Stock to Marketplace</span>
                </button>

                <a href="/stock/dealer" 
                   class="px-8 py-5 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-2xl font-semibold transition-all duration-300 flex items-center justify-center">
                    Cancel
                </a>
            </div>

        </form>

        <!-- Back Link -->
        <div class="mt-8 text-center">
            <a href="/stock/dealer" class="inline-flex items-center gap-2 text-gray-600 hover:text-green-600 transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd"/>
                </svg>
                <span class="font-semibold">Back to Dashboard</span>
            </a>
        </div>

    </div>
</div>

<!-- Image Preview Script -->
<script>
function previewImage(event) {
    const file = event.target.files[0];
    if (file) {
        const reader = new FileReader();
        reader.onload = function(e) {
            document.getElementById('preview').src = e.target.result;
            document.getElementById('uploadPlaceholder').classList.add('hidden');
            document.getElementById('imagePreview').classList.remove('hidden');
        };
        reader.readAsDataURL(file);
    }
}
</script>

<%- include('../layouts/footer') %>