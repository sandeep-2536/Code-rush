    // ... your existing scripts for search, modal, filtering ...
    // (Ensure you keep the scripts present in your original file)
    let currentSchemeName = '';
    
    function filterSchemes(filter) {
       // ... existing code ...
    }
    // ... etc ...
    </script>

    <style>
    /* ... existing styles ... */
    </style>

</body>
</html>