        </div>
        
        <div class="absolute -bottom-20 -right-20 w-64 h-64 bg-yellow-400 rounded-full mix-blend-overlay filter blur-3xl opacity-20"></div>
    </section>

    <section class="px-4 max-w-7xl mx-auto -mt-16 relative z-20">
        
        <div class="max-w-2xl mx-auto mb-10">
            <div class="bg-white p-2 rounded-full shadow-2xl flex items-center border border-gray-100 transform hover:scale-105 transition-transform duration-300">
                <div class="p-3 bg-green-100 rounded-full text-green-700 ml-1">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                </div>
                <input 
                    type="text" 
                    id="schemeSearch"
                    placeholder="Search (e.g., 'Tractor', 'Loan')..."
                    class="w-full bg-transparent px-4 text-gray-800 placeholder-gray-400 focus:outline-none text-lg font-bold"
                    onkeyup="filterSchemes(document.querySelector('.filter-btn.active').dataset.filter)"
                >
            </div>
        </div>

        <div class="flex flex-wrap gap-3 justify-center mb-10">
            <button onclick="filterSchemes('all')" class="filter-btn active px-6 py-2 rounded-full bg-white border border-gray-200 text-gray-600 font-bold hover:bg-green-50 transition" data-filter="all">All</button>
            <button onclick="filterSchemes('All India')" class="filter-btn px-6 py-2 rounded-full bg-white border border-gray-200 text-gray-600 font-bold hover:bg-green-50 transition" data-filter="All India">üáÆüá≥ Central</button>
            <button onclick="filterSchemes('Karnataka')" class="filter-btn px-6 py-2 rounded-full bg-white border border-gray-200 text-gray-600 font-bold hover:bg-green-50 transition" data-filter="Karnataka">State</button>
            <button onclick="filterSchemes('Income Support')" class="filter-btn px-6 py-2 rounded-full bg-white border border-gray-200 text-gray-600 font-bold hover:bg-green-50 transition" data-filter="Income Support">üí∞ Money</button>
            <button onclick="SchemeVoice.readAllSchemes()" class="px-6 py-2 rounded-full bg-green-600 text-white font-bold hover:bg-green-700 transition" title="Read all schemes">üîä Read All</button>
        </div>

        <div id="schemesList" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            
            <% schemes.forEach(scheme => { %>
            <div class="scheme-card shine-effect bg-white rounded-2xl p-6 shadow-lg hover:shadow-2xl transition-all duration-300 border-b-4 border-green-600 cursor-default" 
                 data-state="<%= scheme.state %>" 
                 data-type="<%= scheme.type %>"
                 data-name="<%= scheme.name.toLowerCase() %>">
                
                <div class="flex justify-between items-start mb-5">
                    <div class="w-14 h-14 rounded-full bg-linear-to-b from-yellow-300 to-yellow-500 flex items-center justify-center shadow-md border-4 border-white">
                        <span class="text-yellow-900 text-2xl font-black"><%= scheme.name.charAt(0) %></span>
                    </div>

                    <div class="flex flex-col items-end gap-1">
                        <span class="text-[10px] font-bold uppercase tracking-widest text-green-700 bg-green-100 px-2 py-1 rounded-md"><%= scheme.type %></span>
                        <% if(scheme.state === 'All India' || scheme.state === '‡§Ö‡§ñ‡§ø‡§≤ ‡§≠‡§æ‡§∞‡§§‡•Ä‡§Ø' || scheme.state === '‡≤Ö‡≤ñ‡≤ø‡≤≤ ‡≤≠‡≤æ‡≤∞‡≤§') { %>
                            <span class="text-[10px] font-bold uppercase tracking-widest text-blue-700 bg-blue-100 px-2 py-1 rounded-md">Central</span>
                        <% } else { %>
                             <span class="text-[10px] font-bold uppercase tracking-widest text-gray-600 bg-gray-100 px-2 py-1 rounded-md"><%= scheme.state %></span>
                        <% } %>
                    </div>
                </div>

                <h3 class="text-xl font-extrabold text-gray-800 mb-2 leading-tight group-hover:text-green-700 transition-colors">
                    <%= scheme.name %>
                </h3>
                
                <p class="text-gray-500 mb-4 text-sm font-medium leading-relaxed line-clamp-2">
                    <%= scheme.desc %>
                </p>
                
                <button onclick="SchemeVoice.speakScheme('<%= scheme.name %>', '<%= scheme.desc %>')" 
                        class="speak-btn mb-4 w-full" 
                        title="Listen to scheme details">
                    üîä Listen
                </button>
                
                <div class="flex gap-3 mt-auto">

    <!-- VIEW DETAILS -->
    <a href="https://pmkisan.gov.in/homenew.aspx"
       target="_blank"
       class="flex-1 py-3 rounded-xl font-bold text-sm bg-gray-100 text-gray-600 hover:bg-gray-200 transition flex items-center justify-center">
        View Details
    </a>

    <!-- APPLY NOW -->
    <a href="https://pmkisan.gov.in/RegistrationFormupdated.aspx"
       target="_blank"
       class="flex-1 btn-gold py-3 rounded-xl font-bold text-sm text-white transition flex items-center justify-center">
        Apply Now
    </a>

</div>

            </div>
            <% }) %>

        </div>

        <div id="noResults" class="hidden text-center py-20">
            <div class="inline-block p-4 rounded-full bg-gray-100 mb-3">
                <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            </div>
            <h3 class="text-xl font-bold text-gray-500">No schemes found</h3>
        </div>
    </section>

    <%- include("../layouts/footer") %>

    <!-- Include voice functionality -->
    <script src="/js/voiceOver.js"></script>
    <script src="/js/schemeVoice.js"></script>

    <script>
        let voiceEnabled = localStorage.getItem('aarohi_voice_enabled') !== 'false';
        
        // Initialize voice button state
        document.addEventListener('DOMContentLoaded', function() {
            updateVoiceButtonState();
            loadLanguageSelection();
        });
        
        function toggleVoiceFeature() {
            voiceEnabled = !voiceEnabled;
            localStorage.setItem('aarohi_voice_enabled', voiceEnabled);
            
            if (window.voiceToggle) {
                window.voiceToggle(voiceEnabled);
            }
            
            updateVoiceButtonState();
            
            if (voiceEnabled && window.voiceSpeak) {
                window.voiceSpeak("Voice enabled");
            }
        }
        
        function updateVoiceButtonState() {
            const btn = document.getElementById('voiceToggleBtn');
            if (btn) {
                if (voiceEnabled) {
                    btn.textContent = 'üîä Voice On';
                    btn.classList.remove('bg-gray-500');
                    btn.classList.add('bg-green-500', 'hover:bg-green-600');
                } else {
                    btn.textContent = 'üîá Voice Off';
                    btn.classList.remove('bg-green-500', 'hover:bg-green-600');
                    btn.classList.add('bg-gray-500');
                }
            }
        }
        
        function changeLanguage(lang) {
            localStorage.setItem('aarohi_lang', lang);
            
            if (window.voiceSetLang) {
                window.voiceSetLang(lang);
            }
            
            // Reload page with new language
            window.location.href = window.location.pathname + '?lang=' + lang;
        }
        
        function loadLanguageSelection() {
            const langSelect = document.getElementById('langSelect');
            if (langSelect) {
                const currentLang = localStorage.getItem('aarohi_lang') || 'en';
                langSelect.value = currentLang;
            }
        }

        function filterSchemes(filter) {
            const searchInput = document.getElementById("schemeSearch").value.toLowerCase();
            const cards = document.querySelectorAll(".scheme-card");
            const noResults = document.getElementById("noResults");
            let count = 0;

            document.querySelectorAll(".filter-btn").forEach(btn => {
                btn.classList.remove("active");
                if(btn.getAttribute("data-filter") === filter) btn.classList.add("active");
            });

            cards.forEach(card => {
                const state = card.getAttribute("data-state");
                const type = card.getAttribute("data-type");
                const name = card.getAttribute("data-name");

                const categoryMatch = (filter === 'all' || state === filter || type === filter);
                const searchMatch = name.includes(searchInput) || type.toLowerCase().includes(searchInput);

                if (categoryMatch && searchMatch) {
                    card.style.display = "block";
                    // Reset animation
                    card.style.animation = 'none';
                    card.offsetHeight; 
                    card.style.animation = 'powerSlide 0.5s cubic-bezier(0.34, 1.56, 0.64, 1) forwards';
                    count++;
                } else {
                    card.style.display = "none";
                }
            });
            
            // Announce filter change
            if (voiceEnabled && window.SchemeVoice) {
                window.SchemeVoice.speakSearchResults(count);
            }

            if (count === 0) {
                noResults.classList.remove("hidden");
                document.getElementById("schemesList").classList.add("hidden");
            } else {
                noResults.classList.add("hidden");
                document.getElementById("schemesList").classList.remove("hidden");
            }
        }
    </script>
</body>
</html>