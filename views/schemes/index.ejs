<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title data-i18n="schemes.page_title">Government Schemes - Aarohi Agriculture</title>
    <link rel="stylesheet" href="/css/output.css">

    <style>
        /* Highlight active buttons */
        .filter-btn.active {
            background-color: #16a34a !important;
            color: white !important;
            font-weight: bold;
        }
        .filter-btn {
            padding: 8px 16px;
            border-radius: 8px;
            background-color: #e5e7eb;
            transition: 0.3s;
        }
        .filter-btn:hover {
            background-color: #d1d5db;
        }
    </style>

</head>
<body class="bg-gradient-to-br from-green-50 via-white to-yellow-50 min-h-screen">

    <%- include("../layouts/header") %>

    <section class="bg-gradient-to-r from-green-600 to-green-700 py-16 px-4">
        <div class="max-w-6xl mx-auto text-center">
            <h1 class="text-4xl md:text-6xl font-bold text-white mb-4" data-i18n="schemes.hero.title">
                üèõÔ∏è Government Schemes
            </h1>
            <p class="text-xl text-green-100 max-w-2xl mx-auto" data-i18n="schemes.hero.subtitle">
                Simple and easy information for farmers. Find subsidies, loans, and benefits.
            </p>
        </div>
    </section>

    <section class="py-16 px-4 max-w-7xl mx-auto">
        
        <div class="mb-12 max-w-2xl mx-auto">
            <div class="relative">
                <input 
                    type="text" 
                    id="schemeSearch"
                    data-i18n="schemes.search_placeholder"
                    placeholder="Search schemes by name, state, or type..."
                    class="input-field w-full pr-12"
                >
                <svg class="absolute right-4 top-1/2 transform -translate-y-1/2 w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"/>
                </svg>
            </div>
        </div>

        <!-- FILTER BUTTONS -->
        <div class="flex flex-wrap gap-3 justify-center mb-12">
            <button onclick="filterSchemes('all')" class="filter-btn active" data-filter="all">All Schemes</button>
            <button onclick="filterSchemes('All India')" class="filter-btn" data-filter="All India">All India</button>
            <button onclick="filterSchemes('Karnataka')" class="filter-btn" data-filter="Karnataka">Karnataka</button>
            <button onclick="filterSchemes('Income Support')" class="filter-btn" data-filter="Income Support">Income Support</button>
            <button onclick="filterSchemes('Insurance')" class="filter-btn" data-filter="Insurance">Insurance</button>
        </div>

        <div id="schemesList" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            
            <% schemes.forEach(scheme => { %>
            <div class="scheme-card" data-state="<%= scheme.state %>" data-type="<%= scheme.type %>">
                <div class="flex items-start gap-4 mb-4">
                    <div class="bg-gradient-to-br from-green-500 to-green-600 p-4 rounded-2xl shadow-lg flex-shrink-0">
                        <img src="<%= scheme.icon %>" class="w-10 h-10 object-contain filter brightness-0 invert" alt="icon">
                    </div>
                    <div class="flex-1">
                        <h3 class="text-xl font-bold text-gray-800 mb-2"><%= scheme.name %></h3>
                        <div class="flex gap-2 flex-wrap">
                            <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-xs font-semibold"><%= scheme.state %></span>
                            <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-xs font-semibold"><%= scheme.type %></span>
                        </div>
                    </div>
                </div>
                
                <p class="text-gray-600 mb-4 text-base"><%= scheme.desc %></p>
                
                <div class="flex gap-3">
                    <button onclick="showSchemeDetails('<%= scheme.name %>', '<%= scheme.desc %>', '<%= scheme.state %>')" 
                            class="flex-1 bg-gradient-to-r from-green-600 to-green-700 text-white py-3 px-6 rounded-xl font-semibold hover:shadow-lg transition hover:scale-105">
                        Learn More
                    </button>
                    <button onclick="applyScheme('<%= scheme.name %>')" 
                            class="bg-yellow-500 hover:bg-yellow-600 text-white py-3 px-6 rounded-xl font-semibold transition">
                        Apply
                    </button>
                </div>
            </div>
            <% }) %>

        </div>

        <div id="noResults" class="text-center py-16 hidden">
            <p class="text-2xl font-bold text-gray-400">No schemes found</p>
            <p class="text-gray-500 mt-2">Try different filters or search terms</p>
        </div>
    </section>

    <%- include("../layouts/footer") %>


    <!-- ------------------ WORKING FILTER SCRIPT ------------------ -->
    <script>
        function filterSchemes(filter) {
            const cards = document.querySelectorAll(".scheme-card");
            const noResults = document.getElementById("noResults");
            let count = 0;

            // reset active buttons
            document.querySelectorAll(".filter-btn").forEach(btn => btn.classList.remove("active"));
            document.querySelector(`[data-filter="${filter}"]`)?.classList.add("active");

            cards.forEach(card => {
                const state = card.getAttribute("data-state");
                const type = card.getAttribute("data-type");

                if (filter === 'all' || state === filter || type === filter) {
                    card.style.display = "block";
                    count++;
                } else {
                    card.style.display = "none";
                }
            });

            noResults.classList.toggle("hidden", count > 0);
        }
    </script>

</body>
</html>
