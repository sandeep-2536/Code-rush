    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700;800&display=swap" rel="stylesheet">

    <style>
        body { font-family: 'Poppins', sans-serif; }

        /* Power Animation: Slide Up with a Snap */
        @keyframes powerSlide {
            0% { opacity: 0; transform: translateY(40px) scale(0.9); }
            100% { opacity: 1; transform: translateY(0) scale(1); }
        }

        .scheme-card {
            animation: powerSlide 0.6s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
            opacity: 0;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .scheme-card:hover {
            transform: translateY(-5px);
        }
        
        .scheme-card:nth-child(1) { animation-delay: 0.1s; }
        .scheme-card:nth-child(2) { animation-delay: 0.2s; }
        .scheme-card:nth-child(3) { animation-delay: 0.3s; }
        .scheme-card:nth-child(4) { animation-delay: 0.4s; }

        /* "Shine" Effect on Hover - The "Fiery" Creativity */
        .shine-effect {
            position: relative;
            overflow: hidden;
        }
        .shine-effect::after {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 50%;
            height: 100%;
            background: linear-gradient(to right, rgba(255,255,255,0) 0%, rgba(255,255,255,0.3) 50%, rgba(255,255,255,0) 100%);
            transform: skewX(-25deg);
            transition: none;
        }
        .shine-effect:hover::after {
            animation: shine 0.75s;
        }
        @keyframes shine {
            100% { left: 125%; }
        }

        /* Gold Button */
        .btn-gold {
            background: linear-gradient(135deg, #fbbf24 0%, #d97706 100%);
            box-shadow: 0 4px 10px rgba(217, 119, 6, 0.3);
        }
        .btn-gold:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(217, 119, 6, 0.5);
        }

        /* Active Filter Pill */
        .filter-btn.active {
            background-color: #15803d; /* Green-700 */
            color: white;
            border-color: #15803d;
            box-shadow: 0 4px 12px rgba(22, 163, 74, 0.4);
        }
        
        /* Voice button pulse animation */
        @keyframes pulse-glow {
            0%, 100% { box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.7); }
            50% { box-shadow: 0 0 0 10px rgba(34, 197, 94, 0); }
        }
        
        .voice-btn-active {
            animation: pulse-glow 2s infinite;
        }
        
        /* Scheme voice button */
        .speak-btn {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 0.375rem;
            font-size: 0.75rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            border: none;
        }
        
        .speak-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 8px rgba(16, 185, 129, 0.4);
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen pb-20 selection:bg-green-200 selection:text-green-900">

